#!/usr/bin/env php
<?php
require (__DIR__.'/../vendor/autoload.php');

use \Menory\Unit\Stdio;

$options     = 's:';
$longOptions = ['config-path:'];

$opts = getopt($options, $longOptions);

function help() {
    Stdio::out('Usageï¼šbin/crontab.php -s [start | stop] [options]', Stdio::TYPE['success']);
}

if (!isset($opts['s']) || !$opts['s'])
    return help();

switch ($opts['s']) {
    case 'start':
        \Menory\Timer\TimerManager::start();
        break;
    case 'stop':
        \Menory\Timer\TimerManager::stop();
        break;
    default:
        help();
        break;
}